@using System.Web

@{
    ViewBag.Title = "";
    var F = Html.F();
}


@section body {

    @(F.Panel().IsFluid(true).CssClass("blockpanel").ID("Panel2").ShowBorder(false).Layout(LayoutType.VBox).BoxConfigChildMargin("0 0 5 0").ShowHeader(false).TitleAlign(TextAlign.Center).Title("AES 操作")
        .Items(
            F.Panel().ID("Panel1").Title("ip查询").BodyPadding(10).ShowBorder(true).ShowHeader(true)
            .Toolbars(
            F.Toolbar().Position(ToolbarPosition.Bottom).ToolbarAlign(ToolbarAlign.Center).ID("Toolbar1")
                .Items(
                   F.Button().ID("Button2").Text("查询").ValidateTarget(Target.Top).ValidateForms("Panel2").Type(ButtonType.Submit).OnClick(Url.Action("SearchIp_Click"),"Panel2")
                )
        )
                .Items(
                     F.TextBox().ID("ip").FocusOnPageLoad(true).Required(true).Label("IP或者域名").LabelWidth(160).EmptyText("请输入ip地址或者域名")
                           
                ),
            F.Panel().ID("Panel3").Title("结果").BodyPadding(10).ShowBorder(true).ShowHeader(true)
                .Items(
                   F.Label().ID("Label2").EncodeText(false).Text(ViewBag.Ip)
                )
        )
    )

}

