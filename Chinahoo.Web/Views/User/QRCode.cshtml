@{
    ViewBag.Title = "";
    var F = Html.F();
}


@section body {

    @(F.Panel().IsFluid(true).CssClass("blockpanel").ID("Panel2").ShowBorder(false).Layout(LayoutType.VBox).BoxConfigChildMargin("0 0 5 0").ShowHeader(false).TitleAlign(TextAlign.Center).Title("AES 操作")
        .Items(
            F.Panel().ID("Panel1").Title("输入二维码内容").BodyPadding(10).ShowBorder(true).ShowHeader(true)
            .Toolbars(
            F.Toolbar().Position(ToolbarPosition.Bottom).ToolbarAlign(ToolbarAlign.Center).ID("Toolbar1")
                .Items(
                   F.Button().ID("Button2").Text("生成二维码").ValidateTarget(Target.Top).ValidateForms("Panel2").OnClick(Url.Action("CreateQRCode_Click"),"Panel2")
                )
        )
                .Items(
                    F.TextArea().ID("Key").Required(true).Label("文字内容")
                           
                ),
            F.Panel().ID("Panel3").Title("二维码").BoxConfigAlign(BoxLayoutAlign.Center).BodyPadding(10).ShowBorder(false).ShowHeader(false)
                  .Toolbars(
            F.Toolbar().Position(ToolbarPosition.Bottom).ToolbarAlign(ToolbarAlign.Center).ID("Toolbar1")
                .Items(
                   (F.Image().ID("Image3").ImageWidth(250).ImageHeight(250).ImageCssStyle("border:solid 1px #ccc;padding:5px;text-align: center;vertical-align: middle;").ImageUrl("~/QRCode?url=https://"+Chinahoo.Extensions.Context.Request.GetDomain()+""))
                )
        )
        )
    )

}

