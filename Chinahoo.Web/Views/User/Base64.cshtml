@{
    ViewBag.Title = "";
    var F = Html.F();
}


@section body {

    @(F.Panel().IsFluid(true).CssClass("blockpanel").ID("Panel2").ShowBorder(false).Layout(LayoutType.VBox).BoxConfigChildMargin("0 0 5 0").ShowHeader(false).TitleAlign(TextAlign.Center).Title("AES 操作")
        .Items(
            F.Panel().ID("Panel3").Title("Base64").BodyPadding(10).ShowBorder(true).ShowHeader(true)
                        .Toolbars(
            F.Toolbar().Position(ToolbarPosition.Bottom).ToolbarAlign(ToolbarAlign.Center).ID("Toolbar1")
                .Items(
                   F.Button().ID("Button2").Text("加密").ValidateTarget(Target.Top).ValidateForms("Panel2").OnClick(Url.Action("EncryptionBase64_Click"),"Panel2"),
                   F.Button().ID("Button3").Text("解密").ValidateTarget(Target.Top).ValidateForms("Panel2").OnClick(Url.Action("DecryptBase64_Click"),"Panel2")
                )
        )
                .Items(
                   F.TextArea().ID("original").Label("明文"),
                              F.TextArea().ID("ciphertext").Label("密文")
                )
           
        )
    )

}
